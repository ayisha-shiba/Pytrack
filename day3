P = int(input("Enter Principal amount (P): "))
R = float(input("Enter Rate of interest (R): "))
n = float(input("Enter Number of years (n): "))
SI = (P * R * n) / 100
print("Simple Interest (SI):", round(SI, 2))

mark = float(input("Enter your mark: "))
if mark >= 50:
    print("Passed")
else:
    print("Failed")
